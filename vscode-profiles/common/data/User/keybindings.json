[
    {
        "key": "ctrl+h",
        "command": "workbench.action.focusPreviousGroup",
        "when": "!sideBarVisible"
    },
    {
        "key": "ctrl+h",
        "command": "workbench.action.focusSideBar",
        "when": "sideBarVisible"
    },
    {
        "key": "ctrl+l",
        "command": "workbench.action.focusNextGroup"
    },
    {
        "key": "ctrl+j",
        "command": "workbench.action.nextSideBarView",
        "when": "sideBarFocus"
    },
    {
        "key": "ctrl+k",
        "command": "workbench.action.previousSideBarView",
        "when": "sideBarFocus"
    },
    {
        "key": "tab",
        "command": "workbench.action.quickOpenNavigateNext",
        "when": "inQuickOpen"
    },
    {
        "key": "shift+tab",
        // should work but runs the selection immediately
        "command": "workbench.action.quickOpenNavigatePrevious",
        // "command": "list.focusUp",
        "when": "inQuickOpen"
    },
    {
        "key": "ctrl+p",
        "command": "workbench.action.quickOpen",
    },
    {
        "key": "ctrl+t",
        "command": "workbench.action.terminal.toggleTerminal",
    },
    {
        "key": "enter",
        "command": "list.select",
        "when": "listFocus && !inputFocus && explorerViewletFocus"
    },
    {
        "key": "r",
        "command": "renameFile",
        "when": "listFocus && !inputFocus && explorerViewletFocus"
    },
    {
        "key": "d",
        "command": "deleteFile",
        "when": "listFocus && !inputFocus && explorerViewletFocus"
    },
    {
        "key": "a",
        "command": "explorer.newFile",
        "when": "listFocus && !inputFocus && explorerViewletFocus"
    },
    {
        "key": "alt+p",
        "command": "markdown.showPreview",
        "when": "editorLangId == markdown && vim.mode == 'Normal'"
    },
    {
        "key": "alt+p",
        "command": "latex-workshop.view",
        "when": "editorLangId == latex && vim.mode == 'Normal'"
    },
    {
        "key": "alt+p",
        "command": "plantuml.preview",
        "when": "editorLangId == plantuml && vim.mode == 'Normal'"
    },
    {
        "key": "alt+b",
        "command": "latex-workshop.build",
        "when": "editorLangId == latex && vim.mode == 'Normal'"
    }
]